# Production Environment Variables for Alenia Pulse

# Database Configuration
POSTGRES_USER_PROD=pulse_user
POSTGRES_PASSWORD_PROD=secure_password_here
POSTGRES_DB_PROD=pulse_production

# JWT Configuration
JWT_SECRET_PROD=your_generated_jwt_secret_here
JWT_REFRESH_SECRET_PROD=your_generated_refresh_secret_here

# PgAdmin Configuration
PGADMIN_PASSWORD_PROD=secure_pgadmin_password_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Application URLs
APP_URL=https://pulse.academy.alenia.io
FRONTEND_URL=https://pulse.academy.alenia.io
ALLOWED_ORIGINS=https://pulse.academy.alenia.io,https://pulse-api.academy.alenia.io

# Docker Configuration
LANG=C.UTF-8
LC_ALL=C.UTF-8