# Production Environment Variables for Alenia Pulse
# ⚠️ IMPORTANT: Change all placeholder values for production use!

# Database Configuration
POSTGRES_USER_PROD=pulse_user
POSTGRES_PASSWORD_PROD=CHANGE_THIS_TO_A_SECURE_PASSWORD
POSTGRES_DB_PROD=pulse_production

# JWT Configuration (Generate secure secrets with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET_PROD=GENERATE_A_SECURE_JWT_SECRET_HERE
JWT_REFRESH_SECRET_PROD=GENERATE_A_SECURE_REFRESH_SECRET_HERE

# PgAdmin Configuration
PGADMIN_PASSWORD_PROD=CHANGE_THIS_TO_A_SECURE_PGADMIN_PASSWORD

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Application URLs
APP_URL=https://pulse.academy.alenia.io
FRONTEND_URL=https://pulse.academy.alenia.io
ALLOWED_ORIGINS=https://pulse.academy.alenia.io,https://pulse-api.academy.alenia.io
VITE_API_URL=https://pulse-api.academy.alenia.io

# Docker Configuration
LANG=C.UTF-8
LC_ALL=C.UTF-8