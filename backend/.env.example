# Backend Configuration
# Copy this file to .env and fill in the values.

# -- Application --
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# -- Database (PostgreSQL) --
DB_USER=postgres
DB_HOST=localhost
DB_NAME=newsletter_app
DB_PASSWORD=postgres
DB_PORT=5433
DB_SSL=false

# -- Redis --
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=newsletter:
REDIS_TTL=3600

# -- JWT Secrets --
# It is strongly recommended to use long, random strings for these secrets
JWT_SECRET=
JWT_REFRESH_SECRET=

# -- JWT Expiration (in milliseconds) --
JWT_ACCESS_EXPIRATION_MS=900000
JWT_REFRESH_EXPIRATION_MS=604800000

# -- Bcrypt --
BCRYPT_ROUNDS=12
